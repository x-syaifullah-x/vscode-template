{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "/tmp/vscode/cpp-with-cmake/${workspaceFolderBasename}/build",
                "--target",
                "${workspaceFolderBasename}",
                "--",
                "-j",
                "2"
            ],
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": [
                "cmake-build"
            ],
            "command": "/tmp/vscode/cpp-with-cmake/${workspaceFolderBasename}/build/${workspaceFolderBasename}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}